{
  "env": {
    "node": true,
    "browser": false,
    "mocha": true
  },
  "extends": ["standard"],
  "parserOptions": { "ecmaVersion": 2018 },
  "rules": {
    "arrow-parens": 0,
    "semi": ["error", "never"],
    "operator-linebreak": 0,
    "no-unused-vars": 1,
    "space-before-function-paren": 0,
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreComments": true
      }
    ],
    "new-cap": 1,
    "prefer-promise-reject-errors": 1,
    "no-use-before-define": 1,
    "no-undef": 1,
    "eqeqeq": 1,
    "handle-callback-err": 1,
    "no-unused-expressions": 1,
    "no-sequences": 1,
    "no-unreachable": 1,
    "promise/param-names": 1
  }
}