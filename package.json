    "type": "git",
    "url": "git+https://github.com/scottog/node-starter.git"
  },
  "keywords": [
    "boilerplate",
    "node",
    "jest",
    "eslint"
  ],
  "author": "Scott Gildersleeve",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scottog/node-starter/issues"
  },
  "homepage": "https://github.com/scottog/node-starter#readme",
  "devDependencies": {
    "eslint": "^7.12.0",
    "eslint-config-standard": "16.0.3",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14"
  },
  "dependencies": {
    "pino": "5.17.0",
    "pino-pretty": "2.6.1"
  }
}
